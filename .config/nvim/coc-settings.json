{
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": ["--disable=C,W0703,W0621,W0611,I1101"],
  "python.linting.prospectorEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.formatting.provider": "yapf",
  "python.envFile": "${workspaceFolder}/.vim/.env",
  "diagnostic.checkCurrentLine": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGBlameToBufferVar": true,
  "yaml.format.enable": true,
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.files.excludePatterns": ["**/.git/**", "**/.mypy_cache/**"],
  "languageserver": {
    "haskell": {
      "command": "stack",
      "args": ["exec", "--", "hie-wrapper", "--lsp"],
      "rootPatterns": ["stack.yaml", "cabal.config", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  },
  "git.enableGutters": true
}
